for((i=1; i<=5; i++))
do
  for((j=1; j<=i; j++))
  do
    echo -n "$i "
    i=$((i + 1))
  done
  i=1
  echo
done



''''''''''''''''''''''''''''''''''''''''''''

#Bash Shell Script to print Floyd's Triangle
number=1
rows=4
for((i=1; i<=rows; i++))
do
  for((j=1; j<=i; j++))
  do
    echo -n "$number "
    number=$((number + 1))
  done
  echo
done

